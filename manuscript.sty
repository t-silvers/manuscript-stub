% \setkeys{Gin}{width=1\linewidth} % toggle figure width back to text width
\captionsetup[figure]{
    labelfont={bf},
    name={},
    labelsep=period,
    font=scriptsize, width=1.2\textwidth,
    singlelinecheck=off
}
\setenumerate[0]{label=\textbf{(\Alph*)}} % correct enumeration for figure legends

\modulolinenumbers[1] % number each line
